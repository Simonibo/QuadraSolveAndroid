<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="de.jamesbeans.quadrasolve.Graph" >

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:theme="@style/Widget.AppCompat.ActionBar"
        android:visibility="visible"
        app:popupTheme="@style/Theme.AppCompat.Light"
        app:title="@string/graph"
        app:titleTextColor="@android:color/background_light" />

    <TextView
        android:text="@string/firstroot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/function"
        android:layout_marginStart="15dp"
        android:id="@+id/root1"
        android:visibility="gone"
        android:textSize="18sp"
        android:textColor="@android:color/white" />

    <TextView
        android:text="@string/secondroot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/root1"
        android:layout_marginStart="15dp"
        android:id="@+id/root2"
        android:visibility="gone"
        android:textSize="18sp"
        android:textColor="@android:color/white" />

    <TextView
        android:text="@string/apex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/root2"
        android:layout_marginStart="15dp"
        android:id="@+id/apex"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:paddingBottom="20dp" />
    <!--
    <Button
        android:text="Calculate y-Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/parabel"
        android:layout_centerHorizontal="true"
        android:id="@+id/calcY"
        android:textColor="@android:color/white"
        android:background="@android:color/black" />
    -->

    <de.jamesbeans.quadrasolve.GraphView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:id="@+id/parabel"
        android:layout_below="@+id/apex"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_toolbar"
        android:layout_marginTop="10dp"
        android:id="@+id/function"
        android:typeface="normal"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white" />
    <!--android:layout_alignParentTop="true"-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/parabel"
        app:layout_marginLeftPercent="17%"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/curpoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/curpoint"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/cursor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </LinearLayout>

</android.support.percent.PercentRelativeLayout>
